@model BIBLIOTECA.Models.Usuario
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Perfil";


    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="PerfilBox">
    <div class="CRUD">
        <h3 class="CRUDTitulo">Perfil de usuario</h3>

        <div class="form-horizontal">
            @using (Html.BeginForm())
            {
                if (Model != null)
                {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <table>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Personas.Dni)</td>
                        <td>:   @Html.DisplayFor(model => model.Personas.Dni)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Personas.NombreCompleto)</td>
                        <td>:   @Html.DisplayFor(model => model.Personas.NombreCompleto)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Personas.FecNacimiento)</td>
                        <td>:   @Html.DisplayFor(model => model.Personas.FecNacimiento)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Personas.Direccion)</td>
                        <td>:   @Html.DisplayFor(model => model.Personas.Direccion)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Personas.Telefono)</td>
                        <td>:   @Html.DisplayFor(model => model.Personas.Telefono)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Personas.Email)</td>
                        <td>:   @Html.DisplayFor(model => model.Personas.Email)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.NomUsuario)</td>
                        <td>
                            :   @Html.DisplayFor(model => model.NomUsuario)
                            <a style="cursor:pointer; text-decoration: none;" data-toggle="modal" data-target="#cuadroModal" onclick="EditarUsuario(@Model.IdUsuario)"><span class="glyphicon glyphicon-edit"></span> Editar</a>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Contrasena)</td>
                        <td>:   @Html.Label("xxxxxxx") <a style="cursor:pointer; text-decoration: none;" data-toggle="modal" data-target="#cuadroModal" onclick="EditarPass(@Model.IdUsuario)"><span class="glyphicon glyphicon-edit"></span> Editar</a></td>
                    </tr>
                    <tr>
                        <td>@Html.Label("Rol")</td>
                        <td>:   @Html.DisplayFor(model => model.Roles.NomRol)</td>
                    </tr>
                    <tr>
                        <td colspan="2" class="td-btn">
                            @Html.ActionLink("Regresar", "mipanel", "Home", new { id = Model.IdUsuario }, new { @class = "btn btn-success" })
                        </td>
                    </tr>
                </table>
                }
            }
        </div>
    </div>
</div>


<!--MODAL-->

<div id="cuadroModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"> </h4>
            </div>
            <div class="modal-body">
                <div id="contenidoModal">
                    ...
                </div>
            </div>
        </div>
    </div>
</div>