@{
    ViewBag.Title = "Biblioteca";
}

<section id="BloqueSuperior">

    <div class="centrado">
        @{
            var mensaje = Html.ValidationSummary(true);
            if (mensaje != null)
            {
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <strong>Error!</strong><h2> @Html.ValidationSummary(true)</h2>
                </div>
            }
        }
        <h3>Bienvenidos al</h3>
        <h2>Sistema de Biblioteca</h2><br />
        @Html.ActionLink("Ver catálogo", "Index", "Catalogo", new { }, new { @class = "btn btn-success" })
    </div>

</section>


