@model BIBLIOTECA.Models.Categoria

<div class="CRUD">
    <h3 class="CRUDTitulo">Editar</h3>

    <div class="form-horizontal">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdCategoria)

            <table>
                <tr>
                    <td>@Html.LabelFor(model => model.NomCategoria)</td>
                    <td>
                        @Html.TextBoxFor(model => model.NomCategoria, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "100",
                       onkeypress = "return validarTextNumG(event)"
                   })
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Descripcion)</td>
                    <td>
                        @Html.TextBoxFor(model => model.Descripcion, new
               {
                   @class = "form-control",
                   required = "required",
                   maxlength = "MAX"
               })
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="td-btn">
                        <input type="submit" value="Registrar" class="btn btn-success" />
                    </td>
                </tr>
            </table>
        }
    </div>
</div>