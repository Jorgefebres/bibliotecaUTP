@model BIBLIOTECA.Models.Categoria

<div class="CRUD">
    <h3 class="CRUDTitulo">¿Desea eliminar este registro?</h3>

    <div class="form-horizontal">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <table>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.NomCategoria)</td>
                    <td>:   @Html.DisplayFor(model => model.NomCategoria)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Descripcion)</td>
                    <td>:   @Html.DisplayFor(model => model.Descripcion)</td>
                </tr>
                <tr>
                    <td colspan="2" class="td-btn">
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                    </td>
                </tr>
            </table>
        }
    </div>
</div>