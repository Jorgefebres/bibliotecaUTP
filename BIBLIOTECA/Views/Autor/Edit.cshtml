@model BIBLIOTECA.Models.Autor

<div class="CRUD">
    <h3 class="CRUDTitulo">Editar</h3>

    <div class="form-horizontal">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdAutor)

            <table>
                <tr>
                    <td>@Html.LabelFor(model => model.Apellidos)</td>
                    <td>
                        @Html.TextBoxFor(model => model.Apellidos, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "100",
                       onkeypress = "retur validarText(e)"
                   })
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Nombres)</td>
                    <td>
                        @Html.TextBoxFor(model => model.Nombres, new
               {
                   @class = "form-control",
                   required = "required",
                   maxlength = "100",
                   onkeypress = "retur validarText(e)"
               })
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Sexo)</td>
                    <td>@Html.EnumDropDownListFor(model => model.Sexo, htmlAttributes: new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.FecNacimiento)</td>
                    <td>@Html.EditorFor(model => model.FecNacimiento, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Pais)</td>
                    <td>
                        @Html.TextBoxFor(model => model.Pais, new
           {
               @class = "form-control",
               required = "required",
               maxlength = "100",
               onkeypress = "retur validarText(e)"
           })
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="td-btn">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                    </td>
                </tr>
            </table>
        }
    </div>
</div>