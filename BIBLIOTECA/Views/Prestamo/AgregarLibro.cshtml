@model IEnumerable<BIBLIOTECA.Models.Libro>

@{
    ViewBag.Title = "Agregar Libro";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<h2 class="titulo">Lista de libros</h2>

<div class="contenido">
    @Html.AntiForgeryToken()

    <div class="datos table table-responsive">
        <table id="tablaDeDatos" class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Título
                    </th>
                    <th>
                        Idioma
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th>
                        Autor
                    </th>
                    <th>
                        Categoría
                    </th>
                    <th>
                        Editorial
                    </th>
                    <th>
                        N° Edición
                    </th>
                    <th>
                        Año
                    </th>
                    <th>
                        N° Páginas
                    </th>
                    <th>
                        
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Idioma)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ISBN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Autores.NombreCompleto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categorias.NomCategoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Editoriales.NomEditorial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumEdicion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Anio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumPaginas)
                        </td>
                        <td>
                            @Html.ActionLink("AGREGAR", "AgregarLibro1", new { id = item.IdLibro }, new { @class = "btn btn-success btn-xs" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!--MODAL-->

<div id="cuadroModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"> </h4>
            </div>
            <div class="modal-body">
                <div id="contenidoModal">
                    ...
                </div>
            </div>
        </div>
    </div>
</div>

<!--SCRIPTS & LINKS-->

<link rel="stylesheet" href="~/Resources/css/jquery.dataTables.css" />
<script src="~/Resources/js/jquery.js"></script>
<script src="~/Resources/js/jquery.dataTables.js"></script>

<script>

    $(document).ready(function () {
        $('#tablaDeDatos').DataTable();
    });

</script>