@model BIBLIOTECA.Models.Editorial

<div class="CRUD">
    <h3 class="CRUDTitulo">Nuevo registro</h3>

    <div class="form-horizontal">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <table>
                <tr>
                    <td>@Html.LabelFor(model => model.NomEditorial)</td>
                    <td>@Html.TextBoxFor(model => model.NomEditorial, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "100",
                       onkeypress = "return validarTextNum(event)"
                   })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Pais)</td>
                    <td>@Html.TextBoxFor(model => model.Pais, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "100",
                       onkeypress = "return validarTextNumG(event)"
                   })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Ciudad)</td>
                    <td>@Html.TextBoxFor(model => model.Ciudad, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "100",
                       onkeypress = "return validarTextNumG(event)"
                   })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Email)</td>
                    <td>@Html.TextBoxFor(model => model.Email, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "100",
                       type = "email"
                   })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Url)</td>
                    <td>@Html.TextBoxFor(model => model.Email, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "100",
                       type = "url"
                   })</td>
                </tr>
                <tr>
                    <td colspan="2" class="td-btn">
                        <input type="submit" value="Registrar" class="btn btn-success" />
                    </td>
                </tr>
            </table>
        }
    </div>
</div>