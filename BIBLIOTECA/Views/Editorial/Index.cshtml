@model IEnumerable<BIBLIOTECA.Models.Editorial>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<h2 class="titulo">Editorial</h2>

<div class="contenido">
    <div class="operaciones">
        <a id="nuevo" class="btn btn-success btn-sm" data-toggle="modal" data-target="#cuadroModal">  REGISTRAR</a>
        <a id="nuevo" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-print"></span>  IMPRIMIR</a>
    </div>

    <div class="datos table table-responsive">
        <table id="tablaDeDatos" class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NomEditorial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Pais)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ciudad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Url)
                    </th>
                    <th>
                        Operaciones
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomEditorial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pais)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ciudad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Url)
                        </td>
                        <td>
                            <a class="btn btn-xs btn-info" data-toggle="modal" data-target="#cuadroModal" onclick="DetallarID(@Html.DisplayFor(modelItem => item.IdEditorial))"><span class="glyphicon glyphicon-info-sign"></span></a>
                            <a class="btn btn-xs btn-success" data-toggle="modal" data-target="#cuadroModal" onclick="EditarID(@Html.DisplayFor(modelItem => item.IdEditorial))"><span class="glyphicon glyphicon-edit"></span></a>
                            <a class="btn btn-xs btn-danger" data-toggle="modal" data-target="#cuadroModal" onclick="EliminarID(@Html.DisplayFor(modelItem => item.IdEditorial))"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!--MODAL-->

<div id="cuadroModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"> </h4>
            </div>
            <div class="modal-body">
                <div id="contenidoModal">
                    ...
                </div>
            </div>
        </div>
    </div>
</div>

<!--SCRIPTS & LINKS-->

<link rel="stylesheet" href="~/Resources/css/jquery.dataTables.css" />
<script src="~/Resources/js/jquery.js"></script>
<script src="~/Resources/js/jquery.dataTables.js"></script>

<script>

    $(document).ready(function () {
        $('#tablaDeDatos').DataTable();
    });

    $("#nuevo").click(function (event) {
        $("#contenidoModal").load("/Editorial/Create");
    });

    function EditarID(id) {
        $("#contenidoModal").load("/Editorial/Edit/" + id);
    };

    function DetallarID(id) {
        $("#contenidoModal").load("/Editorial/Details/" + id);
    };

    function EliminarID(id) {
        $("#contenidoModal").load("/Editorial/Delete/" + id);
    };

</script>