@model BIBLIOTECA.Models.Libro

<div class="CRUD">
    <h3 class="CRUDTitulo">Nuevo registro</h3>

    <div class="form-horizontal">
        @using (Html.BeginForm(Html.BeginForm("Create", "Libro", FormMethod.Post, new { enctype = "multipart/form-data" })))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <table>
                <tr>
                    <td>@Html.LabelFor(model => model.Titulo)</td>
                    <td>@Html.TextBoxFor(model => model.Titulo, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "200"
                   })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Idioma)</td>
                    <td>@Html.TextBoxFor(model => model.Idioma, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "100",
                       onkeypress = "return validarTextNumG(event)"
                   })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.NumEdicion)</td>
                    <td>@Html.TextBoxFor(model => model.NumEdicion, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "3",
                       onkeypress = "return validar(event)"
                   })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.ISBN)</td>
                    <td>@Html.TextBoxFor(model => model.ISBN, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "12",
                       minlength = "8",
                       onkeypress = "return validarTextNumG(event)"
                   })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Anio)</td>
                    <td>@Html.TextBoxFor(model => model.Anio, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "4",
                       minlength = "4",
                       placeholder = "Ej. 1999",
                       onkeypress = "return validar(event)"
                   })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.NumPaginas)</td>
                    <td>@Html.TextBoxFor(model => model.NumPaginas, new
                   {
                       @class = "form-control",
                       required = "required",
                       maxlength = "5",
                       onkeypress = "return validar(event)"
                   })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Estado)</td>
                    <td>@Html.TextBoxFor(model => model.Estado, new
                      {
                          @class = "form-control",
                          required = "required",
                          maxlength = "MAX",
                          patter = ""
                      })</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Caratula)</td>
                    <td><input type="file" name="CaratulaLibro" value="Subir carátula"/></td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Disponibilidad)</td>
                    <td>@Html.EditorFor(model => model.Disponibilidad, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <td>Autor</td>
                    <td>@Html.DropDownList("IdAutor", null, htmlAttributes: new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td>Categoría</td>
                    <td>@Html.DropDownList("IdCategoria", null, htmlAttributes: new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td>Editorial</td>
                    <td>@Html.DropDownList("IdEditorial", null, htmlAttributes: new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td colspan="2" class="td-btn">
                        <input type="submit" value="Registrar" class="btn btn-success" />
                    </td>
                </tr>
            </table>
        }
    </div>
</div>